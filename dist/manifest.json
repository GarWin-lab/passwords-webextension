{
    "manifest_version": 2,
    "name"            : "Nextcloud Passwords",
    "version"         : "1.0.0",
    "description"     : "A simple client for the Nextcloud Passwords app",
    "icons"           : {
        "16": "img/passwords-16.png",
        "32": "img/passwords-32.png",
        "48": "img/passwords-48.png",
        "96": "img/passwords-96.png"
    },
    "browser_action"  : {
        "default_icon" : "img/passwords.svg",
        "default_title": "Nextcloud Passwords",
        "default_popup": "/html/manager.html",
        "browser_style": true
    },
    "applications"    : {
        "gecko": {
            "id": "ncpasswords@mdns.eu"
        }
    },

    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["js/client.js"]
        }
    ],

    "permissions": [
        "*://*/*",
        "notifications",
        "tabs",
        "clipboardWrite",
        "storage",
        "contextMenus",
        "webRequest",
        "webRequestBlocking"
    ]
}